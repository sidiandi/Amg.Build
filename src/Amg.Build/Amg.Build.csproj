<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Amg.Build.props" />
    <None Remove="build.cmd" />
    <None Remove="build.cs.template" />
    <None Remove="build.csproj.template" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="build.cs.template" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Amg.Build.props" />
    <EmbeddedResource Include="build.cmd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="build.csproj.template" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../LICENSE" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Castle.Core" Version="4.4.0" />
    <PackageReference Include="GitVersionCore" Version="5.0.1" />
    <PackageReference Include="Serilog" Version="2.8.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
  </ItemGroup>

</Project>
